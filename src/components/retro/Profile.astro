---
import config from '../../configs/retro-config.js';

// Add keyframe animations to the global styles
const animations = `
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  @keyframes glow {
    0%, 100% { text-shadow: 0 0 10px #fff, 0 0 20px #fff, 0 0 30px #00ffff; }
    50% { text-shadow: 0 0 20px #fff, 0 0 30px #ff00ff, 0 0 40px #ff00ff; }
  }
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
`;
---

<style set:html={animations}></style>

<div class="flex flex-col items-center space-y-6 p-8 relative">
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-full h-full pointer-events-none">
    <div class="absolute top-4 left-4 w-8 h-8 border-4 border-retro-yellow animate-[spin_4s_linear_infinite]"></div>
    <div class="absolute bottom-4 right-4 w-8 h-8 border-4 border-retro-pink animate-[spin_4s_linear_infinite_reverse]"></div>
    <div class="absolute top-4 right-4 w-4 h-4 bg-retro-cyan animate-[float_2s_ease-in-out_infinite]"></div>
    <div class="absolute bottom-4 left-4 w-4 h-4 bg-retro-green animate-[float_2s_ease-in-out_infinite_reverse]"></div>
  </div>

  <!-- Profile Image -->
  <div class="relative">
    <div class="absolute inset-0 bg-gradient-to-r from-retro-pink via-retro-yellow to-retro-cyan rounded-full animate-[spin_10s_linear_infinite] opacity-75"></div>
    <img
      src={config.user.profileImage}
      alt="Profile"
      class="w-32 h-32 rounded-full border-4 border-white relative animate-[float_3s_ease-in-out_infinite]"
    />
  </div>

  <!-- Name and Bio -->
  <div class="text-center z-10">
    <h1 class="text-4xl font-bold text-retro-yellow mb-2 animate-[glow_2s_ease-in-out_infinite]">
      {config.user.name}
    </h1>
    <p class="text-xl text-white mb-4">
      <span class="bg-retro-pink px-2">Software</span>
      <span class="bg-retro-cyan px-2 mx-1">Engineer</span>
    </p>
    <p class="text-white max-w-md mx-auto leading-relaxed">
      {config.user.bio}
    </p>
  </div>
</div>
