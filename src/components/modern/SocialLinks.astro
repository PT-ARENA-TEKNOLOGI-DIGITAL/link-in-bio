---
import config from '../../../config.js';
---

<div class="flex justify-center space-x-4 my-6">
  {
    config.socialLinks.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-all duration-200 hover:scale-110 hover:-translate-y-1"
      >
        <i class={`fab fa-${link.platform} text-2xl`} aria-hidden="true" />
        <span class="sr-only">{link.platform}</span>
      </a>
    ))
  }
</div>
