---
interface Props {
  link: {
    title: string;
    url: string;
    icon?: string;
  };
}

const { link } = Astro.props;
---

<a
  href={link.url}
  class="block w-full max-w-md mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-200 overflow-hidden mb-6 group"
>
  <div class="p-6 flex items-center">
    {link.icon && (
      <i class={`fas fa-${link.icon} text-xl text-gray-600 dark:text-gray-400 mr-4`} aria-hidden="true" />
    )}
    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
      {link.title}
    </h3>
    <i class="fas fa-arrow-right ml-auto text-gray-400 dark:text-gray-500 transform group-hover:translate-x-1 transition-transform duration-200" aria-hidden="true" />
  </div>
</a>
